---
import Layout from '../../layouts/Layout.astro';
import TableOfContents from '../../components/TableOfContents.astro';

const headings = [
  { text: "TL;DR - Key Points", slug: "tldr" },
  { text: "Best Color Matching Tools", slug: "tools" },
  { text: "Understanding Hair Color Basics", slug: "basics" },
  { text: "How to Match Your Natural Color", slug: "matching" },
  { text: "Common Color Matching Mistakes", slug: "mistakes" },
