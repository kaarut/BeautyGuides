---
interface Props {
  title: string;
  description: string;
  image: string;
  url: string;
  date: string;
}

const { title, description, image, url, date } = Astro.props;
---

<article class="group relative overflow-hidden rounded-lg bg-gray-800 shadow-xl hover:shadow-2xl transition duration-300">
  <a href={url} class="block" rel="dofollow">
    <img src={image} alt={title} class="h-64 w-full object-cover transition duration-300 group-hover:scale-105" />
    <div class="p-6">
      <time datetime={date} class="text-sm text-gray-400">{date}</time>
      <h3 class="mt-2 text-xl font-bold font-playfair text-white group-hover:text-pink-400 transition">{title}</h3>
      <p class="mt-3 text-gray-300 line-clamp-2">{description}</p>
    </div>
  </a>
</article>